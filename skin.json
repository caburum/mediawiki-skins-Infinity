{
	"name": "Infinity",
	"version": "1.0.0",
	"author": ["[https://www.mediawiki.org/wiki/User:Caburum Caburum]", "..."],
	"url": "https://www.mediawiki.org/wiki/Skin:Infinity",
	"descriptionmsg": "infinity-skin-desc",
